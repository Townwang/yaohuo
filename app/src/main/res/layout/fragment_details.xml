<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.scwang.smart.refresh.layout.SmartRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:srlPrimaryColor="?colorPrimary"
            app:srlAccentColor="@android:color/white"
            app:srlEnablePreviewInEditMode="true"
            tools:ignore="MissingConstraints">
        <androidx.core.widget.NestedScrollView
                android:id="@+id/nesScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UnusedAttribute"
                android:orientation="vertical"
                android:scrollbars="none">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:background="@drawable/border_left_color"
                        android:id="@+id/title"
                        tools:text="我只是一个标题而已"
                        android:textSize="@dimen/text16Size"
                        android:visibility="gone"
                        android:padding="10dp"
                        android:transitionName="share name"
                        android:textStyle="bold"
                        android:textColor="@color/md_grey_900"
                        android:autoSizeTextType="none"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:visibility="gone"
                        android:background="@drawable/background_translucent_2"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:id="@+id/constraintLayout">
                    <ImageView
                            android:id="@+id/userImg"
                            android:layout_margin="8dp"
                            android:src="@drawable/anim_vector_android_blue_senior"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                            tools:text="妖火"
                            android:id="@+id/userName"
                            android:textColor="@color/md_black_1000"
                            android:layout_width="wrap_content"
                            android:layout_marginStart="10dp"
                            android:textSize="@dimen/text14Size"
                            android:maxEms="10"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@+id/userImg"
                            app:layout_constraintTop_toTopOf="@+id/userImg"
                            app:layout_constraintBottom_toBottomOf="@+id/userImg"/>

                    <TextView
                            tools:text="在线"
                            android:id="@+id/online"
                            android:textSize="@dimen/text12Size"
                            android:paddingStart="2dp"
                            android:paddingEnd="2dp"
                            android:layout_margin="1dp"
                            android:textColor="@color/white"
                            android:background="@drawable/background_blue_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@+id/userName"
                            app:layout_constraintTop_toTopOf="@+id/userName"
                            app:layout_constraintBottom_toBottomOf="@+id/userName"/>

                    <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/linearTop"
                            android:layout_width="0dp"
                            android:layout_marginTop="10dp"
                            android:paddingBottom="10dp"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/userImg"
                            app:layout_constraintStart_toStartOf="@+id/userImg"
                            app:layout_constraintEnd_toStartOf="@+id/read_num"
                            android:layout_marginEnd="8dp">
                        <TextView
                                tools:text="赏"
                                android:id="@+id/icon"
                                android:textSize="@dimen/text10Size"
                                android:paddingStart="2dp"
                                android:paddingEnd="2dp"
                                android:layout_margin="1dp"
                                android:textColor="@color/white"
                                android:background="@drawable/background_yellow_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                        />
                        <TextView
                                android:id="@+id/subtitle"
                                tools:text="我只是一个副标题而已"
                                android:textSize="@dimen/text10Size"
                                android:layout_marginStart="5dp"
                                android:textColor="@color/md_amber_800"
                                android:autoSizeTextType="none"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <TextView
                            android:id="@+id/read_num"
                            tools:text="阅读(21)"
                            android:textSize="@dimen/text10Size"
                            android:textColor="@color/md_grey_500"
                            android:autoSizeTextType="none"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:paddingBottom="10dp"
                            app:layout_constraintEnd_toStartOf="@+id/time"
                            app:layout_constraintTop_toTopOf="@+id/time"
                    />
                    <TextView
                            tools:text="2019/12/02 12:25:00"
                            android:id="@+id/time"
                            android:layout_marginTop="10dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/md_grey_500"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text10Size"
                            app:layout_constraintEnd_toEndOf="@+id/attention"
                            app:layout_constraintTop_toBottomOf="@+id/userImg"/>
                    <TextView
                            android:id="@+id/attention"
                            android:textSize="@dimen/text10Size"
                            android:textColor="@color/white"
                            android:text="关注"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_margin="20dp"
                            android:background="@drawable/background_fillet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="@+id/userImg"
                            app:layout_constraintTop_toTopOf="@+id/userImg"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/list_content"
                        android:layout_width="0dp"
                        android:layout_margin="20dp"
                        android:paddingBottom="10dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                />
                <TextView
                        android:id="@+id/comment_tip"
                        app:layout_constraintTop_toBottomOf="@+id/list_content"
                        android:background="@drawable/border_left_color"
                        android:text="全部评论"
                        android:visibility="gone"
                        android:textSize="@dimen/text16Size"
                        android:padding="10dp"
                        android:textColor="@color/md_grey_700"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="MissingConstraints"/>
                <View
                        android:id="@+id/view_grey"
                        android:visibility="gone"
                        android:background="@color/md_grey_50"
                        android:layout_width="match_parent"
                        app:layout_constraintTop_toBottomOf="@+id/comment_tip"
                        android:layout_height="10dp"/>
                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/commentLists"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="50dp"
                        android:layoutAnimation="@anim/layout_animation_fall_down"
                        tools:listitem="@layout/item_comment_data"
                        tools:ignore="MissingConstraints,UnusedAttribute"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view_grey"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_top_color"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/refreshLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    >
        <TextView
                android:id="@+id/reply"
                android:textSize="@dimen/text14Size"
                android:paddingStart="20dp"
                android:text="写回复"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:textColor="@color/md_grey_700"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="RtlSymmetry"
                app:drawableStartCompat="@drawable/ic_mode_edit_black_24dp" />

        <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/comment"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/comment_value"
                    android:text="@string/_0"
                    android:textSize="@dimen/text10Size"
                    android:padding="7dp"
                    android:drawablePadding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:drawableStartCompat="@drawable/ic_comment_24_dp" />
        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/praise"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/praise_value"
                    android:text="@string/_0"
                    android:textSize="@dimen/text10Size"
                    android:padding="7dp"
                    android:drawablePadding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:drawableStartCompat="@drawable/ic_praise" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>