<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal">
    <TextView
            android:id="@+id/news"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="最新"
            android:textSize="@dimen/text14Size"
            app:drawableTopCompat="@drawable/ic_fiber_new_black_24dp" />

    <TextView
            android:id="@+id/bbs"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="论坛"
            android:textSize="@dimen/text14Size"
            app:drawableTopCompat="@drawable/ic_view_module_black_24dp" />
    <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
    <TextView
            android:id="@+id/game"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="游戏"
            android:textSize="@dimen/text14Size"
            app:drawableTopCompat="@drawable/ic_games_black_24dp" />

    <TextView
            android:id="@+id/me"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="我的"
            android:textSize="@dimen/text14Size"
            app:drawableTopCompat="@drawable/ic_person_black_24dp" />
</LinearLayout>