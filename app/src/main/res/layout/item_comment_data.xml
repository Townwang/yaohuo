<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="@color/md_grey_50"
    android:padding="5dp">

    <ImageView
        android:id="@+id/userImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:src="@drawable/anim_vector_android_blue_senior"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.townwang.yaohuo.ui.weight.htmltext.TextViewFixTouchConsume
        android:id="@+id/auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/md_grey_500"
        android:textSize="@dimen/text14Size"
        android:enabled="true"
        android:focusable="true"
        android:longClickable="true"
        android:textIsSelectable="true"
        app:layout_constraintStart_toEndOf="@+id/userImg"
        app:layout_constraintTop_toTopOf="@+id/userImg"
        tools:text="妖火" />

    <TextView
        android:id="@+id/floor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="?colorPrimary"
        android:textSize="@dimen/text14Size"
        app:layout_constraintStart_toStartOf="@+id/auth"
        app:layout_constraintTop_toBottomOf="@+id/auth"
        tools:text="1楼" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/reward"
        app:layout_constraintStart_toEndOf="@+id/floor"
        app:layout_constraintTop_toBottomOf="@+id/auth">

        <com.townwang.yaohuo.ui.weight.htmltext.TextViewFixTouchConsume
            android:id="@+id/comment_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:enabled="true"
            android:focusable="true"
            android:longClickable="true"
            android:textIsSelectable="true"
            android:textColor="@color/md_grey_800"
            android:textSize="@dimen/text14Size"
            tools:text="我只是评论" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/reward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="?colorPrimary"
        android:textSize="@dimen/text14Size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="悬赏" />
</androidx.constraintlayout.widget.ConstraintLayout>