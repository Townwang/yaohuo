<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@color/md_grey_50"
        android:layout_margin="3dp"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:id="@+id/cardView">

    <ImageView
            android:id="@+id/userImg"
            android:layout_margin="8dp"
            android:src="@drawable/anim_vector_android_blue_senior"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <cn.droidlover.xrichtext.XRichText
            tools:text="妖火"
            android:textSize="@dimen/text14Size"
            android:textColor="@color/md_grey_500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/auth"
            app:layout_constraintStart_toEndOf="@+id/userImg"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/userImg"/>

    <TextView
            tools:text="1楼"
            android:textSize="@dimen/text14Size"
            android:textColor="?colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/floor"
            app:layout_constraintStart_toStartOf="@+id/auth"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/auth"/>

    <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/floor"
            app:layout_constraintEnd_toStartOf="@+id/reward"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/auth"
            app:layout_constraintBottom_toBottomOf="parent">
        <cn.droidlover.xrichtext.XRichText
                tools:text="我只是评论"
                android:textSize="@dimen/text14Size"
                android:textColor="@color/md_grey_800"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/comment_tv"
                android:layout_marginStart="8dp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
            tools:text="悬赏"
            android:textSize="@dimen/text14Size"
            android:textColor="?colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reward"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>