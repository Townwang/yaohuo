<resources xmlns:tools="http://schemas.android.com/tools">
    <!--  popup menu style-->
    <style name="OverflowMenuStyle" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:popupBackground">?colorPrimary</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <!--输入框样式-->
    <style name="TextOverCount" parent="Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item><!--默认显示下划线的颜色-->
        <item name="colorControlActivated">#F5F5F5</item><!--点击后下划线的颜色-->
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="button_blue_style">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/button_blue_background</item>
        <item name="android:minWidth">5dp</item>
        <item name="android:minHeight">5dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:height">30dp</item>
    </style>
    <style name="web_view_style">
        <item name="android:background">@color/white</item>
        <item name="android:webViewStyle">@drawable/background_web_view</item>
    </style>
    <!-- Search Text Style. -->
    <style name="SearchTextStyle">
        <!-- Custom values write to here for SearchEditText. -->
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:enabled">true</item>
        <item name="android:hint">Search</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLength">15</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textCursorDrawable">@null</item>

    </style>

    <style name="notAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <style name="labels_style">
        <item name="android:background">#00000000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>



